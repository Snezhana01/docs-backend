{
  "compilerOptions": {
    "module": "commonjs",
    "noLib": false,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@platforms/*": ["src/platforms/*"],
      "@common/*": ["src/common/*"],
      "@database/*": ["database/*"],
      "@configs/*": ["src/configs/*"]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
